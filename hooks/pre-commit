#!/bin/bash

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${BLUE}********************************************${NC}"
echo -e "${BLUE}  Pre-Commit Hook: CMake Build Check${NC}"
echo -e "${BLUE}********************************************${NC}"
echo ""

if [ ! -d "build" ]; then
    echo -e "${RED}Error: build/ directory not found.${NC}"
    echo -e "${YELLOW}Create it with:${NC}"
    echo -e "${YELLOW}  mkdir build && cd build && cmake ..${NC}"
    exit 1
fi

echo -e "${BLUE}Configuring project (cmake ..)...${NC}"
cd build
if ! cmake ..; then
    echo -e "${RED}CMake configuration failed${NC}"
    exit 1
fi

echo ""
echo -e "${BLUE}Building project (make)...${NC}"
if ! make -j$(nproc); then
    echo ""
    echo -e "${RED}Build failed${NC}"
    echo -e "${YELLOW}Fix build errors before committing.${NC}"
    echo -e "${YELLOW}To commit anyway: git commit --no-verify${NC}"
    exit 1
fi

echo ""
echo -e "${GREEN}Build successful${NC}"
echo ""

exit 0